<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.emeraldcraft.mcinfojavafx.JavaFX.UpdateWindowController">
   <children>
      <ImageView fitHeight="133.0" fitWidth="123.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@update_icon.png" />
         </image>
      </ImageView>
      <Text layoutX="137.0" layoutY="92.0" strokeType="OUTSIDE" strokeWidth="0.0" text="An update is available!">
         <font>
            <Font name="Segoe MDL2 Assets" size="42.0" />
         </font>
      </Text>
      <Button fx:id="ignoreUpdateButton" layoutX="126.0" layoutY="349.0" mnemonicParsing="false" onAction="#denyUpdate" prefHeight="25.0" prefWidth="109.0" style="-fx-background-color: Crimson;" text="Ignore Update ">
         <effect>
            <InnerShadow />
         </effect>
      </Button>
      <Button fx:id="confirmUpdateButton" layoutX="326.0" layoutY="349.0" mnemonicParsing="false" onAction="#confirmUpdate" prefHeight="25.0" prefWidth="151.0" style="-fx-background-color: GREEN;" text="Download and restart">
         <effect>
            <InnerShadow />
         </effect>
      </Button>
      <TextArea fx:id="releaseText" editable="false" layoutX="76.0" layoutY="137.0" prefHeight="188.0" prefWidth="469.0" promptText="Please wait... Pulling release info">
         <font>
            <Font name="Symbol" size="11.0" />
         </font>
      </TextArea>
      <Text fx:id="downloadingText" layoutX="334.0" layoutY="396.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="143.0">
         <font>
            <Font name="Lucida Sans Unicode" size="15.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
